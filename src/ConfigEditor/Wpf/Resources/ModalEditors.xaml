<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="ModalEditorButtonTemplate">
        <Button Content="..." 
                ToolTip="Open editor in a modal dialog"
                Command="{Binding Path=DataContext.OpenModalEditorCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                CommandParameter="{Binding}"
                HorizontalAlignment="Left"
                Padding="5,0"/>
    </DataTemplate>

</ResourceDictionary> 