<Window x:Class="JsonConfigEditor.Views.PathBuilderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Path Builder" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Build a custom file path:" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,10"/>
        
        <!-- Node Path Display -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding NodePath}" 
                   FontFamily="Consolas" 
                   Foreground="Gray" 
                   Margin="0,0,0,15"/>
        
        <!-- Path Segments -->
        <GroupBox Grid.Row="2" Header="Path Segments:" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ListBox Grid.Column="0" 
                         ItemsSource="{Binding PathSegments}" 
                         SelectedItem="{Binding SelectedSegment}"
                         MaxHeight="150">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="Consolas"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                    <Button Content="Add" 
                            Command="{Binding AddSegmentCommand}"
                            Width="60" 
                            Height="25" 
                            Margin="0,0,0,5"/>
                    <Button Content="Remove" 
                            Command="{Binding RemoveSegmentCommand}"
                            Width="60" 
                            Height="25"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- New Segment Input -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox Grid.Column="0" 
                     Text="{Binding NewSegmentText, UpdateSourceTrigger=PropertyChanged}"
                     FontFamily="Consolas"
                     Margin="0,0,10,0"/>
            
            <Button Grid.Column="1" 
                    Content="Add Segment" 
                    Command="{Binding AddSegmentCommand}"
                    Width="100" 
                    Height="25"/>
        </Grid>
        
        <!-- Preview -->
        <GroupBox Grid.Row="4" Header="Preview:" Margin="0,0,0,15">
            <TextBlock Text="{Binding PreviewPath}" 
                       FontFamily="Consolas" 
                       FontWeight="Bold"
                       Foreground="Blue"/>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="OK" 
                    Command="{Binding ConfirmCommand}"
                    IsDefault="True"
                    Width="75" 
                    Height="25" 
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Width="75" 
                    Height="25"/>
        </StackPanel>
    </Grid>
</Window> 