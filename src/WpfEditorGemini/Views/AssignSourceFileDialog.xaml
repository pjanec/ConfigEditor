<Window x:Class="JsonConfigEditor.Views.AssignSourceFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Source File" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Choose a source file for the new node:" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,10"/>
        
        <!-- Node Path Display -->
        <TextBlock Grid.Row="1" 
                   Text="{Binding NodePath}" 
                   FontFamily="Consolas" 
                   Foreground="Gray" 
                   Margin="0,0,0,15"/>
        
        <!-- Suggestions List -->
        <GroupBox Grid.Row="2" Header="Suggested Files:" Margin="0,0,0,15">
            <ListBox ItemsSource="{Binding SuggestedFiles}" 
                     SelectedItem="{Binding SelectedFile}"
                     MaxHeight="120">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontFamily="Consolas"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        
        <!-- Custom Path Button -->
        <Button Grid.Row="3" 
                Content="Create New File..." 
                Command="{Binding OpenPathBuilderCommand}"
                HorizontalAlignment="Left"
                Margin="0,0,0,15"
                Padding="10,5"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="OK" 
                    Command="{Binding ConfirmCommand}"
                    IsDefault="True"
                    Width="75" 
                    Height="25" 
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    IsCancel="True"
                    Width="75" 
                    Height="25"/>
        </StackPanel>
    </Grid>
</Window> 